<div class="container">
	<div class="row">
	    <div class="col-xs-3">
	    	<%= render 'users/abc', user: @user, book_new: @book_new %>
		</div>
    <div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
		    </tr>
	    <% @books.each do |book| %>
		    <tr>
		    	<td><%= link_to book_path(book.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
		    		<% end %>
		    	</td>
		    	<td><%= link_to book_path(book.id) do %><%= book.title %></td>
		    	<% end %>
		    	<td><% book.body %></td>
            </tr>
	    <% end %>
	    </table>
		</div>
    </div>
</div>

